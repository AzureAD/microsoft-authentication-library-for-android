<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 

    <WebView
        android:id="@+id/com_microsoft_identity_client_webView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp" />

    <EditText
        android:id="@+id/com_microsoft_identity_client_editDummyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/com_microsoft_identity_client_webView1"
        android:layout_alignLeft="@+id/com_microsoft_identity_client_webView1"
        android:layout_alignStart="@+id/com_microsoft_identity_client_webView1"
        android:layout_marginBottom="124dp"
        android:layout_marginLeft="86dp"
        android:layout_marginStart="86dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:visibility="gone" >
    </EditText>

    <ProgressBar
        android:id="@+id/com_microsoft_identity_client_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>