<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/http_auth_dialog_padding_left"
    android:paddingRight="@dimen/http_auth_dialog_padding_right" >

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/http_auth_dialog_username"
        android:paddingTop="@dimen/http_auth_dialog_padding_top" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/http_auth_dialog_password"
        android:inputType="textPassword"
        android:paddingTop="@dimen/http_auth_dialog_padding_top"
        android:paddingBottom="@dimen/http_auth_dialog_padding_bottom" />

</LinearLayout>