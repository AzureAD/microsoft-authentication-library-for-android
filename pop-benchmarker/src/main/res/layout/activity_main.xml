<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manufacturer"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_manf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Model"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OS Version"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_osver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="API Level"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_api_lvl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key Generation (ms)"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_key_gen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key Load (ms)"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_key_load"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Signing (ms)"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_signing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <!-- Row start -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hardware Isolated"
                android:textSize="@dimen/textview_font_size" />

            <TextView
                android:id="@+id/disp_hardware_iso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calculating..."
                android:textSize="@dimen/textview_font_size" />

        </LinearLayout>
        <!-- Row End -->

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Running Benchmarks... Please wait" />
    </LinearLayout>

</ScrollView>